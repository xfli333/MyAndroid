<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
        android:id="@+id/widget0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/bg"
        >
    <EditText
            android:id="@+id/widget27"
            android:layout_width="173px"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_x="110px"
            android:layout_y="122px"
            android:singleLine="true"


            >
    </EditText>
    <TextView
            android:id="@+id/widget28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名:"
            android:textColor="#ff0000"
            android:layout_x="40px"
            android:layout_y="137px"

            >
    </TextView>
    <TextView
            android:id="@+id/widget29"
            android:layout_width="wrap_content"
            android:layout_height="23px"
            android:text="密    码:"
             android:textColor="#ff0000"
            android:layout_x="40px"
            android:layout_y="192px"

            >
    </TextView>
    <EditText
            android:id="@+id/widget30"
            android:layout_width="173px"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_x="110px"
            android:layout_y="182px"
            android:singleLine="true"
            android:password="true"
            >
    </EditText>
    <CheckBox
            android:id="@+id/widget31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="109px"
            android:layout_y="240px"
            >
    </CheckBox>
    <TextView
            android:id="@+id/widget32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住我:"
            android:layout_x="40px"
            android:textColor="#ff0000"
            android:layout_y="250px"
            >
    </TextView>
    <Button
            android:id="@+id/widget33"
            android:layout_width="104px"
            android:layout_height="41px"
            android:text="登录"
            android:layout_x="30px"
            android:layout_y="303px"
            >
    </Button>
    <Button
            android:id="@+id/widget34"
            android:layout_width="108px"
            android:layout_height="41px"
            android:text="取消"
            android:layout_x="158px"
            android:layout_y="303px"
            >
    </Button>

    <ProgressBar android:id="@+id/progressBar"
                 style="?android:attr/progressBarStyle"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:max="300"
                 android:layout_centerHorizontal="true"
                 android:layout_centerVertical="true"
                 android:visibility="gone">
    </ProgressBar>
</AbsoluteLayout>
